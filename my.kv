<MainWindow>:
    name: "main"

    FloatLayout:
        canvas.before: 
        
            Color: 
                rgba: (1,.6,1,1)
            Rectangle: 
                pos: self.pos
                size: self.size
     
        Label:
            text: "Title Your Drawing:"
          


            pos_hint: {'x': 0, 'top': 1}
            size_hint: 1, 0.1
             

        TextInput:
            id: Passw
            multiline: False
            pos_hint: {'x': 0, 'top': .9}
            size_hint: 1, 0.2

        Button:
            text: "Choose Starting Color"
            on_release: 
                app.root.current = "second"
                root.manager.transition.direction = "left"
            background_color: colors1.Ppink
            pos_hint: {'x': .4 , 'y': .4}
            size_hint: 0.2, 0.2

